<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.example.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.example.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuccessfullyRegistered</servlet-name>
        <jsp-file>/WEB-INF/view/successfully_registered.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>SuccessfullyLogin</servlet-name>
        <jsp-file>/WEB-INF/view/successfully_login.jsp</jsp-file>
    </servlet>


    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuccessfullyRegistered</servlet-name>
        <url-pattern>/successfullyRegistered</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuccessfullyLogin</servlet-name>
        <url-pattern>/successfullyLogin</url-pattern>
    </servlet-mapping>

</web-app>